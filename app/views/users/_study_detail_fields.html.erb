<div class="nested-fields">
  <div class="card-header">
    <h4 class="card-title text-warning">Study Details</h4>
  </div>

  <div class="form-group">
    <%= f.label :school %>
    <%= f.text_field :school, autofocus: true, class: 'form-control', placeholder: 'Enter your name of institute' %>
  </div>

  <div class="form-group">
    <%= f.label :degree %>
    <%= f.text_field :degree, class: 'form-control', placeholder: 'Enter your degree name' %>
  </div>

  <div class="form-group">
    <%= f.label :format %>
    <%= f.text_field :format, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :from %>
    <%= f.date_field :from, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :to %>
    <%= f.date_field :to, class: 'form-control' %>
  </div>

  <%= link_to_remove_association "remove study", f, class: 'btn btn-sm btn-danger mb-3' %>
</div>